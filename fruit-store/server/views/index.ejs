<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skins Shop</title>
</head>

<body>
    <h1>Skins Shop</h1>
    <h2>Skins</h2>

    <% Object.keys(skins).forEach( skin=> { %>
    <form>
        <input type="hidden" name="skin" value="<%= skins[skin].name %>">
        <span id="<%= skins[skin].name %>-data">
            <%= skins[skin].name %> - <%= skins[skin].quantity %> - $<%= skins[skin].price %>
        </span>
        <button type="submit">Buy</button>
    </form>
    <% }) %>

    <br>

    <span>You have <strong id="money">$<%= money.toFixed(2) %></strong>.</span>

    <br>

    <div id="response"></div>
    <em>
        <div id="description"></div>
    </em>

    <script>
        let money = <%= money %>;
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', async event => {
                event.preventDefault();
                const skin = event.target.skin.value;
                const url = `/api/v1/buy`;
                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        skin: skin,
                        quantity: 1
                    })
                });
                if (response.ok) {
                    const { name, price, description, quantity } = await response.json();
                    document.getElementById(`${skin}-data`).innerText = `${name} - ${quantity} - $${price}`;
                    money -= price;
                    document.getElementById('money').innerText = `$${money.toFixed(2)}`;
                    document.getElementById('response').innerText = `Bought ${name}`;
                    document.getElementById('description').innerText = `"${description}"`;
                } else {
                    const error = await response.text();
                    document.getElementById('response').innerText = error;
                    document.getElementById('description').innerText = '';
                }
            });
        });
    </script>
</body>

</html>
